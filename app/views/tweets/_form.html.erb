<% if request.post? || request.patch? %> or <!-- @tweet.errors.any -->
  <div class="errors">
    <h2>There were errors creating your tweet!</h2>
    <% @tweet.errors.full_messages.each_with_index do |error, index| %>
      <p><%= index + 1 %>: <%= error %>.</p>
    <% end %>
  </div>
<% end %>

<%= form_for(@tweet, html: {multipart: true}) do |f| %>
  <p>
    <%= f.label(:title, 'Title goes here:') %>
    <%= f.text_field(:title, placeholder: 'Title goes here') %>
  </p>
  <p>
    <%= f.label(:body, body_label) %>
    <%= f.text_area(:body, placeholder: 'Body goes here') %>
  </p>
  <p>
    <%= f.label(:photo) %>
    <%= f.file_field(:photo) %>
  </p>
  <p><%= f.submit(button_title) %></p>
<% end %>